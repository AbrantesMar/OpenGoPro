# This copyright was auto-generated on Thu, May  6, 2021  6:58:14 PM


BUILD_DIR=docs/build

dirs=($(find $BUILD_DIR -maxdepth 1 -type d))

for dir in ${dirs[@]}; do
    name=$(basename $dir)
    if [[ ${name:0:1} == "_" ]]; then
        new_name=${name:1}
        echo "Replacing $name with $new_name"

        # Rename top level directory
        mv $dir $(dirname $dir)/$new_name

        # Replace this string in all files
        find $BUILD_DIR -type f -exec sed -i -e "s/$name/$new_name/g" {} \;
    fi
done
